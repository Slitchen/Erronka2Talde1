<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circle Image View -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Rounded Button -->
    <style name="RoundedButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Input Stroke Color -->
    <style name="InputStrokeColor">
        <item name="boxStrokeColor">@color/input_stroke_color</item>
    </style>
    <style name="ShapeAppearance.CustomCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>

        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>

